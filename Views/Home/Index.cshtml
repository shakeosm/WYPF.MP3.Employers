@model MCPhase3.ViewModels.HomeFileUploadVM

@{
    ViewData["Title"] = "LG";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    var payLocations = Model.PayLocationList;
    var payLocationSelectList = new SelectList(payLocations, "pay_location_ID", "pay_location_name");
}



<form asp-action="Create" enctype="multipart/form-data" method="post" id="UploadFileForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @*<h1 class="mainheading"> LG - Contribution advice</h1>
    <p class="mainheading">If you need to contact us phone 01274 434563 or 01274 435310</p>*@
    <div class="border shadow-lg p-4 mb-4 bg-white">
        @*<div class="container-fluid bg-3 text-center">
        <div class="container">*@
        <div class="row justify-content-center">
            <div class="col-11 col-sm-9 col-md-12 col-lg-12 col-xl-5 text-center p-0 mt-3 mb-2">
                <div class="card px-0 pt-4 pb-0 mt-3 mb-3">

                    <!-- progressbar -->
                    <ul id="progressbar">
                        <li class="active" id="account"><strong>File Upload</strong></li>
                        <li id="personal"><strong>Check Totals</strong></li>
                        <li id="personal"><strong>Data Summary</strong></li>
                        <li id="personal"><strong>Error and Warning Summary</strong></li>
                        <li id="personal"><strong>Bulk Approval</strong></li>
                        <li id="payment"><strong>Submit to Database</strong></li>
                        <li id="confirm"><strong>Finish</strong></li>
                    </ul>
                </div>
            </div>
        </div>
                
        <div class="container" id="uploadFile">
            <div class="jumbotron">

                <div class="col-md-12 mb-5">
                    <h4>List of Paylocations:</h4>
                    @*<select class="form-control col-md-6" asp-for="PayLocationList" asp-items="ViewBag.Paylocations"></select>*@
                    <select class="form-select col-md-6" asp-for="PayLocationList" asp-items="payLocationSelectList"></select>
                </div>

                <h4>Step 1 - select payroll information</h4><hr />

                <div class="col-md-12 mb-5">
                    @*<label class="col-md-6">Select Payroll month:</label>*@
                    <label class="col-12 mb-3">Select Payroll month:</label>
                    @*<select class="form-select col-md-6" asp-for="MonthList" asp-items="ViewBag.Months"></select><br><br>*@
                    @foreach (var item in Model.MonthList)
                    {
                        var itemId = item.text;//.ToString().Replace("/", "");
                        <input type="radio" class="btn-check" name="monthsList" autocomplete="off" id="@itemId" value="@itemId">
                        <label class="btn btn-outline-info" for="@itemId">@itemId</label>
                    }
                </div>
                <div class="col-md-12 mb-5">
                    <label class="col-12 mb-2">Select Payroll year:</label>
                    @*<select class="form-select col-md-6" asp-for="YearList" asp-items="ViewBag.Years"></select><br><br>*@
                    @{
                        foreach (var item in Model.YearList)
                        {
                            var itemId = item.years;//.ToString().Replace("/", "");                            
                            <input type="radio" class="btn-check" name="yearsList" autocomplete="off" id="@itemId" value="@itemId">
                            <label class="btn btn-outline-info" for="@itemId">@itemId</label>
                        }
                     }
                </div>

                <div class="col-md-12 mb-5">
                    <label class="col-12">Posting for:</label>
                    @*<select class="form-select col-md-6" size="3" asp-for="posting" asp-items="(IEnumerable<SelectListItem>)ViewBag.Posting" style="height:80px;"></select><br><br>*@

                    <input type="radio" class="btn-check" name="posting" id="FirstPostingRadioButton" autocomplete="off" value="1">
                    <label class="btn btn-outline-info" for="FirstPostingRadioButton">1st posting</label>
                    
                    <input type="radio" class="btn-check" name="posting" id="SecondPostingRadioButton" autocomplete="off" value="2">
                    <label class="btn btn-outline-info" for="SecondPostingRadioButton">2nd posting for same month</label>

                    <input type="radio" class="btn-check" name="posting" id="PrevMonthPostingRadioButton" autocomplete="off" value="3">
                    <label class="btn btn-outline-info" for="PrevMonthPostingRadioButton">File has previous month data</label>

                </div>

                <h4>Step 2: upload monthly contribution spreadsheet</h4>

                <p><input type="file" name="paymentFile" id="UploadFileInput" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel" class="form-control"></p>
                <div class="form-group col-md-6">
                    <input type="submit" id="UploadFileButton" value="Upload File" class="btn btn-primary" disabled />
                    <small id="uploadHelp" class="form-text text-muted">Maxium file size 5MB. File type Excel only. </small>
                </div>
                @*<textarea asp-for="myErrorMessageText" id="myErrorMessageText"></textarea>*@
            </div>
            @if (TempData["MsgM"] != null)
            {
                var alterClass = TempData["MsgM"].ToString().Contains("success") ? "alert-success" : "alert-danger";
                <div class="alert @alterClass border-2">

                    <!--Html.Raw to apply Html tags inside a string-->
                    @Html.Raw(@TempData["MsgM"].ToString())
                </div>

                @if (@TempData["MsgM"].ToString() == "File is uploaded successfully")
                {
                    <div class="col-12">
                        <a asp-action="Remad" class="btn btn-primary">Next </a> to check all totals are correct.
                    </div>
                }
            }
        </div>
    </div>
</form>




